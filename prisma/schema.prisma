// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================
// ENUMS
// =========================

enum AccountStatus {
  ACTIVE
  FROZEN
  SUSPENDED
  CLOSED
}

enum AccountCategory {
  SAVINGS
  CHECKING
  LOAN
  INVESTMENT
}

enum UserRole {
  CUSTOMER
  TELLER
  MANAGER
  ADMIN
}

// =========================
// MODELS
// =========================

model User {
  id               String   @id @default(uuid())
  full_name        String
  email            String   @unique
  phone_number     String   @unique
  password_hash    String
  role             UserRole
  notifyByEmail    Boolean  @default(true)
  notifyBySMS      Boolean  @default(true)
  notifyByWhatsapp Boolean  @default(true)

  accounts Account[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Transaction Transaction[]

  approvedTo Transaction[] @relation("approvedBy")

  AuditLog AuditLog[]

  SupportTicket SupportTicket[]

  assignedTickets SupportTicket[] @relation("AssignedTickets")
}

model Account {
  id             String          @id @default(uuid())
  account_number Int             @unique @default(autoincrement())
  balance        Decimal         @default(0.0)
  status         AccountStatus   @default(ACTIVE)
  category       AccountCategory

  interestRate   Decimal
  expectedReturn Decimal?

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])

  parentAccountId String?
  parentAccount   Account?  @relation("AccountHierarchy", fields: [parentAccountId], references: [id])
  subAccounts     Account[] @relation("AccountHierarchy")

  // ðŸ”½ Transactions where this account RECEIVES money
  incomingTransactions Transaction[] @relation("ToAccount")

  // ðŸ”½ Transactions where this account SENDS money
  outgoingTransactions Transaction[] @relation("FromAccount")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  notifications notifications[]
}

model notifications {
  id             String @id @default(uuid())
  account_id     String
  message        String
  transaction_id String

  account     Account     @relation(fields: [account_id], references: [id])
  transaction Transaction @relation(fields: [transaction_id], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TransactionType {
  DEPOSIT
  WITHDRAW
  TRANSFER
}

enum TransactionStatus {
  REQUIRES_MANAGER
  REQUIRES_ADMIN
  REJECTED
  APPROVED
}

model Transaction {
  id     String            @id @default(uuid())
  type   TransactionType
  amount Decimal
  status TransactionStatus

  approvedById String?
  approvedBy   User?   @relation("approvedBy", fields: [approvedById], references: [id])

  fromAccountId String?
  fromAccount   Account? @relation("FromAccount", fields: [fromAccountId], references: [id])

  toAccountId String?
  toAccount   Account? @relation("ToAccount", fields: [toAccountId], references: [id])

  createdAt DateTime @default(now())
  // User      User?    @relation(fields: [userId], references: [id])
  // userId    String?

  notifications notifications[]
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  APPROVE
  REJECT
  LOGIN
  STATUS_CHANGE
  TRANSFER_EXECUTED
}

model AuditLog {
  id            String      @id @default(uuid())
  action        AuditAction
  entityType    String // "Transaction", "Account", "User"
  entityId      String
  performedById String?
  performedBy   User?       @relation(fields: [performedById], references: [id])

  metadata  Json
  ipAddress String?

  createdAt DateTime @default(now())

  @@index([entityType, entityId])
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

model SupportTicket {
  id      String       @id @default(uuid())
  subject String
  message String
  status  TicketStatus @default(OPEN)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  assignedToId String?
  assignedTo   User?   @relation("AssignedTickets", fields: [assignedToId], references: [id])

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  resolvedAt DateTime?
}
